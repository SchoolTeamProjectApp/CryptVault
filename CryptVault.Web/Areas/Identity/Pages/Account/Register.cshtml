@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "_LayoutNavbarless";
}



<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <a asp-page="./Index" class="">
                        <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>CryptVault</h3>
                    </a>
                    <h3>Sign Up</h3>
                </div>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-primary"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" type="email" class="form-control" id="floatingText" placeholder="name@example.com">
                        <label asp-for="Input.Email" for="floatingText">Email</label>
                        <span asp-validation-for="Input.Email" class="text-primary"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" id="floatingInput" placeholder="Password">
                        <label asp-for="Input.Password" for="floatingInput">Password</label>
                        <span asp-validation-for="Input.Password" class="text-primary"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label asp-for="Input.ConfirmPassword">Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-primary"></span>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-4">
                    </div>
                    <button id="registerSubmit"  type="submit" class="btn btn-primary py-3 w-100 mb-4">Sign Up</button>
                </form>
                
                <p class="text-center mb-0">Already have an Account? <a href="Login">Sign In</a></p>
            </div>
        </div>
    </div>
</div>
<!-- Sign Up End -->



