@using Microsoft.AspNetCore.Identity;
@model IEnumerable<CardViewModel>
@{
    Layout = "Layouts/_PanelLayout";
}

@if (this.User?.Identity?.IsAuthenticated != null && this.User.Identity.IsAuthenticated)
{
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-12">
                <div class="bg-secondary rounded h-100 p-4">
                    <a asp-controller="Card" asp-action="AddCard" class="btn btn-primary text-white">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        Add Card
                    </a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">CCV</th>
                                    <th scope="col">ExpireMonth</th>
                                    <th scope="col">ExpireYear</th>
                                    <th scope="col">NameOnCard</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var cInfo in Model)
                                    {
                                        <tr>
                                            <td>@cInfo.Name</td>
                                            <th scope="row">@cInfo.CCV</th>
                                            <td>@cInfo.ExpireMonth</td>
                                            <td>@cInfo.ExpireYear</td>
                                            <td>@cInfo.NameOnCard</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@cInfo.Id" class="btn btn-light"><i class="fa fa-solid fa-pen"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="12">No Cards</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1>You will need to Log in Or Register</h1>
}