@model EditCardViewModel
@inject SignInManager<ApplicationUser> signInManager;

@{
    ViewData["Title"] = "Edit Card";
    Layout = "Layouts/_PanelLayout";
}
<div class="bg-secondary rounded h-100 p-4">
    <form asp-action="Edit" method="post">
        <h4 class="text-primary">Edit Card</h4>

        <input type="hidden" asp-for="Id" value="@Model.Id">
        <div class="form-floating mb-3">
            <input asp-for="Name" type="text" class="form-control" id="floatingInput"
                   placeholder="Name">
            <label asp-for="Name">Name</label>
            <span asp-validation-for="Name" class="text-primary"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="CCV" type="text" class="form-control" id="floatingInput"
                   placeholder="CCV">
            <label asp-for="CCV" for="floatingInput">Email address</label>
            <span asp-validation-for="CCV" class="text-primary"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="ExpireMonth" type="number" class="form-control" id="floatingInput"
                   placeholder="xx">
            <label asp-for="ExpireMonth">Expire Month</label>
            <span asp-validation-for="ExpireMonth" class="text-primary"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="ExpireYear" type="number" class="form-control" id="floatingInput"
                   placeholder="xxxx">
            <label asp-for="ExpireYear">Expire Year</label>
            <span asp-validation-for="ExpireYear" class="text-primary"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="NameOnCard" type="text" class="form-control" id="floatingInput"
                   placeholder="Name">
            <label asp-for="NameOnCard">Name on card</label>
            <span asp-validation-for="NameOnCard" class="text-primary"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Edit" class="btn btn-primary w-25" />
        </div>
    </form>
</div>
