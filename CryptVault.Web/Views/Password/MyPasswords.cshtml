@using Microsoft.AspNetCore.Identity;
@model IEnumerable<PasswordViewModel>

@{
    Layout = "Layouts/_PanelLayout";
}

@if (this.User?.Identity?.IsAuthenticated != null && this.User.Identity.IsAuthenticated)
{
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-12">
                <div class="bg-secondary rounded h-100 p-4">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Passwords</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Website</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">Description</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var pInfo in Model)
                                    {
                                        <tr>
                                            <td>@pInfo.Id</td>
                                            <th scope="row">@pInfo.Username</th>
                                            <td>@pInfo.Email</td>
                                            <td>@pInfo.Website</td>
                                            <td>@pInfo.Description</td>
                                            <td>
                                                <button class="btn btn-primary"><i class="fa fa-solid fa-arrows-spin"></i>Regenerate Password</button>
                                                <button class="btn btn-light"><i class="fa fa-solid fa-plus"></i> Create New</button>
                                                <button class="btn btn-warning"><i class="fa fa-solid fa-user-pen"></i> Edit</button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="12">No Passwords</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1>You will need to Log in Or Register</h1>
}
